@model IEnumerable<ModernSoftwareDevelopmentAssignment5.Models.SongArtistModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Songs" asp-action="Index" method="get">
    <p>
        <select asp-for="SongArtist" asp-items="Model.Artist">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].artistID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs![0].price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Songs!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.artistID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
